<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:orientation="vertical">
    <android.support.design.widget.NavigationView
        android:id="@+id/vNavigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/transparent"

        app:itemIconTint="#8b8b8b"
        app:itemTextColor="#666666"
        app:menu="@menu/drawer_menu"/>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="200dp"
                card_view:background="@drawable/card_foreground"
                android:background="@drawable/card_foreground"
                android:clickable="true"
                card_view:cardCornerRadius="4dp"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="8dp"
                    android:layout_height="30dp">

                    <TextView
                        android:id="@+id/alltitle"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="全部"
                        android:textAlignment="inherit" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/alltitle"
                        android:src="@drawable/notes" />

                    <TextView
                        android:layout_width="30dp"
                        android:id="@+id/totcnt"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:text="20" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_margin="8dp"
                card_view:background="@drawable/card_foreground"
                android:background="@drawable/card_foreground"
                android:clickable="true"
                card_view:cardCornerRadius="4dp"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="8dp"
                    android:layout_height="30dp">

                    <TextView
                        android:id="@+id/hometitle"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="生活"
                        android:textAlignment="inherit" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/hometitle"
                        android:src="@drawable/home" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/homecnt"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:text="20" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_margin="8dp"
                card_view:background="@drawable/card_foreground"
                android:background="@drawable/card_foreground"
                android:clickable="true"
                card_view:cardCornerRadius="4dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="8dp"
                    android:layout_height="30dp">

                    <TextView

                        android:id="@+id/worktitle"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="工作" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/worktitle"
                        android:src="@drawable/work" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/workcnt"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:text="20" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_margin="8dp"
                card_view:background="@drawable/card_foreground"
                android:background="@drawable/card_foreground"
                android:clickable="true"
                card_view:cardCornerRadius="4dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="8dp"
                    android:layout_height="30dp">

                    <TextView
                        android:id="@+id/cattitle"

                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="宠物" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/cattitle"
                        android:src="@drawable/cat" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/petcnt"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:text="20" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_margin="8dp"
                card_view:background="@drawable/card_foreground"
                android:background="@drawable/card_foreground"
                android:clickable="true"
                card_view:cardCornerRadius="4dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="8dp"
                    android:layout_height="30dp">

                    <TextView
                        android:id="@+id/qusttitle"
                        android:layout_width="30dp"

                        android:layout_height="30dp"
                        android:text="未知" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/qusttitle"
                        android:src="@drawable/question" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/unknowcnt"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:text="20" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_margin="8dp"
                card_view:background="@drawable/card_foreground"
                android:background="@drawable/card_foreground"
                android:clickable="true"
                card_view:cardCornerRadius="4dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="8dp"
                    android:layout_height="30dp">

                    <TextView
                        android:id="@+id/imptitle"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="重要" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/imptitle"
                        android:src="@drawable/important" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/impcnt"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:text="20" />
                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/cardupdate"
                android:layout_margin="8dp"
                card_view:background="@drawable/card_foreground"
                android:background="@drawable/card_foreground"
                android:clickable="true"
                card_view:cardCornerRadius="4dp"
                android:layout_height="30dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <ImageView
                        android:id="@+id/updateimg"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/update"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="67dp"
                        android:layout_marginBottom="7dp"
                        android:layout_alignParentTop="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@id/updateimg"
                        android:layout_marginLeft="60dp"
                        android:text="检查更新"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

    </RelativeLayout>


</LinearLayout>